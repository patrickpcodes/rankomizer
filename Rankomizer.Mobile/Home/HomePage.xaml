<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rankomizer.Mobile.Home.HomePage"
             xmlns:views="clr-namespace:Rankomizer.Mobile.Views"
             Title="HomePage">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label x:Name="ResultLabel"
               Text="Waiting for duel..."
               FontSize="18"
               HorizontalOptions="Center" />

        <Button Text="Start Gauntlet"
                Clicked="OnStartGauntletClicked"
                HorizontalOptions="Center" />
        <Grid ColumnSpacing="10" RowSpacing="10" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <views:DuelView x:Name="DuelControl" Grid.Column="0" />
            <views:RosterListView x:Name="RosterControl" Grid.Column="1" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>